<div class= "container">
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">BURGERS!!!!</h1>
    <p class="lead">Play around with all the yummy burgers we have</p>
  </div>
</div>
<div class= "card">
<div class ="row">
  <div class ="col">
<h2>Burgers that have not been eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class ="col">
<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Type of Burger:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured"> GONE</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Still Available
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>